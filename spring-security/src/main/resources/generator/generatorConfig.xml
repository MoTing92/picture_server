        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.moting.spring.mapper"  targetProject="src\main\resources"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.moting.spring.mapper"  targetProject="src\main\java"/>

        <table tableName="user">
            <generatedKey column="user_id" sqlStatement="MySql"/>
        </table> 
		<table tableName="role">
            <generatedKey column="role_id" sqlStatement="MySql"/>
        </table> 
        <table tableName="menu">
            <generatedKey column="menu_id" sqlStatement="MySql"/>
        </table>
    </context>
</generatorConfiguration>